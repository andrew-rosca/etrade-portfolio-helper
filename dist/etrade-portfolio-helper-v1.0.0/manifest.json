{
  "manifest_version": 3,
  "name": "E*TRADE Portfolio Helper",
  "version": "1.0",
  "description": "Extract information from E*TRADE portfolio position tables",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://us.etrade.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://us.etrade.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}